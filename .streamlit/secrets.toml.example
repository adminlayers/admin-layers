# Encryption key for persistent encrypted storage
# Generate one with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Or use any strong passphrase (will be derived into a key)
encryption_key = "your-strong-encryption-key-here"

# Optional: Genesys Cloud credentials for auto-connect
# These are encrypted at rest when encryption_key is set
# [genesys]
# client_id = "your-client-id"
# client_secret = "your-client-secret"
# region = "mypurecloud.com"
